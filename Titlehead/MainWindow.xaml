                <Label x:Name="label9" Content="Released" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top"/>
                <GroupBox x:Name="groupBox2" Header="Format" HorizontalAlignment="Left" Margin="0,78,0,0" VerticalAlignment="Top" Height="48" Width="288">
